doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Visualize
    style(type="text/css").
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }
  body
    each network in networks
      h1= network.name

      each category in network.data
        h2= category.category.join(' // ')
        table
          tbody
            tr
              each th in category.headers
                th= th
            each tr in category.data
              tr
                each thKey in category.headers
                  td= tr[thKey]
